{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node",
            "config": {
                "maxLambdaSize": "50mb",
                "runtime": "nodejs18.x"
            }
        }
    ],
    "routes": [
        {
            "src": "/health",
            "dest": "/server.js"
        },
        {
            "src": "/api-docs",
            "dest": "/server.js"
        },
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/admin/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/public/assets/$1",
            "headers": {
                "Cache-Control": "public, max-age=604800"
            }
        },
        {
            "src": "/css/(.*)",
            "dest": "/public/css/$1",
            "headers": {
                "Cache-Control": "public, max-age=86400"
            }
        },
        {
            "src": "/js/(.*)",
            "dest": "/public/js/$1",
            "headers": {
                "Cache-Control": "public, max-age=86400"
            }
        },
        {
            "src": "/(.*)",
            "dest": "/server.js"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "VERCEL": "true"
    },
    "functions": {
        "server.js": {
            "maxDuration": 30
        }
    },
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET, POST, PUT, DELETE, OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type, Authorization"
                }
            ]
        }
    ]
}
